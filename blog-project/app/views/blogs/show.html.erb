<div class="centerApp2">


<div class="alert">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  <p id="notice"><%= notice %></p>
</div>

<h2>
  <strong>Title:</strong>
  <%= @blog.title %>
</h2>

<div class="borderContent">
<p style="font-size:20px">
  <%= @blog.content %>
</p>
</div>

<div class="rightContent">
    <% if @blog.userID == @currentUserId %>
        <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <% end %>
    <%= link_to 'Back', blogs_path %>
</div>

<hr>
<h4 style="margin:10px">Comment List</h4>
<div class="borderContent">
<ul>
  <% @blog.blog_comment.each do |blog_comment|%>
   <li><%= blog_comment.comment%>
     <<i><%= blog_comment.user.email %></i>></li>
<% end %>
</ul>
</div>
<hr>

<%= form_with(model: @blog_comment, local: true) do |form| %>
  <div class= "field">
      <%= form.label :Comment %><br />
    <%= form.text_area :comment %>
    <%= form.hidden_field :blog_id, :value => @blog.id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


</div>