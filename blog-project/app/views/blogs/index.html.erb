<div class="centerApp2">

<div class="alert" id="alert-title">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  <p id="notice"><%= notice %></p>
</div>

<h1>Blogs</h1>

<h2>Availble Blogs</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Userid</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <%if blog.status == 1 %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.userID %></td>
        <td><%= blog.time %></td>
       
        
        
         <% if blog.userID == @currentUserId %>
             <td><%= link_to 'Show', blog %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td>
            <% if blog.status == 1 %>
            <%= link_to 'Hide', update_status_blog_path(blog, status: 0), method: :patch %>
            <% else %>
            <%= link_to 'Appear', update_status_blog_path(blog, status: 1), method: :patch %>
            <% end %>
        </td>
        <% else %>
            <td colspan="3"><%= link_to 'Show', blog %></td>
        <% end %>
        
         
      </tr>
    <% end %>
    <% end %>
  </tbody>
  
</table>

<br>
<%= link_to 'New Blog', new_blog_path %>
<br><hr><br>
 <h2>Hided Blogs</h2>
<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Tiltle</th>
      <th>Userid</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <%if blog.status == 0 %>
        <% if blog.userID == @currentUserId %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.userID %></td>
        <td><%= blog.time %></td>
       
        <td><%= link_to 'Show', blog %></td>
        
     
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td>
                <% if blog.status == 1 %>
                <%= link_to 'Hide', update_status_blog_path(blog, status: 0), method: :patch %>
                <% else %>
                <%= link_to 'Appear', update_status_blog_path(blog, status: 1), method: :patch %>
                <% end %>
            </td>
           
     

      </tr>
      <% end %>
    <% end %>
    <% end %>
  </tbody>
  <br>
</table>

</div>
<script> 
    var empt = document.getElementById('notice').innerText;
  if ( empt == null || empt == "") {
    document.getElementById("alert-title").style.display = "none";
  } else {
    document.getElementById("alert-title").style.background = "#51B987";
  }

</script>