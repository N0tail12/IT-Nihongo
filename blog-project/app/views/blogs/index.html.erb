<h1>Blogs</h1>

<h2>Availble Blogs</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Userid</th>
      <th>Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <%if blog.status == 1 %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.userID %></td>
        <td><%= blog.time %></td>
        <td><%= blog.status %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
  
</table>

