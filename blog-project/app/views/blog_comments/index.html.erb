
<div class="alert" id="alert-title">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  <p id="notice"><%= notice %></p>
</div>

<h1>Blog Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Blog</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= blog_comment.user_id %></td>
        <td><%= blog_comment.blog_id %></td>
        <td><%= blog_comment.comment %></td>
        <td><%= link_to 'Show', blog_comment %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(blog_comment) %></td>
        <td><%= link_to 'Destroy', blog_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Comment', new_blog_comment_path %>


<script> 
    var empt = document.getElementById('notice').innerText;
  if ( empt == null || empt == "") {
    document.getElementById("alert-title").style.display = "none";
  } else {
    document.getElementById("alert-title").style.background = "#51B987";
  }

</script>